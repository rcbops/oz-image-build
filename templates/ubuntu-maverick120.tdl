<template>
 <name>ubuntu-maverick_x86_64_120G</name>
 <description>Ubuntu 10.10 120GB template</description>
 <disksize>120</disksize>
 <os>
  <name>Ubuntu</name>
  <version>10.10</version>
  <arch>x86_64</arch>
  <rootpw>ROOT-PW_CHANGE-ME!!!</rootpw>
  <install type='iso'>
    <iso>http://releases.ubuntu.com/10.10/ubuntu-10.10-server-amd64.iso</iso>
  </install>
 </os>
 <commands>
   <command name='console'>
sed -i 's/splash//g' /etc/default/grub
sed -i 's/quiet/console=ttyS0/g' /etc/default/grub
/usr/sbin/update-grub
   </command>
   <command name='update'>
apt-get update
apt-get -y upgrade
apt-get -y install cloud-init
apt-get clean
/usr/sbin/useradd stack
echo "stack ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers
sed -i 's/^user: ubuntu/user: stack/g' /etc/cloud/cloud.cfg
   </command>
 </commands>
</template>
